    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="5, 20, 5, 20" CornerRadius="0">
                <Label Text="Acelerómetro"
                       HorizontalTextAlignment="Center"
                       TextColor="White"
                       FontSize="34"
                       FontAttributes="Bold"/>
